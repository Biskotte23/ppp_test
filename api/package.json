{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=development nodemon",
    "start:prod": "NODE_ENV=production nodemon",
    "build": "tsc --experimentalDecorators",
    "serve": "NODE_ENV=production node dist/server.js",
    "lint": "eslint './src/**/*.@(js|ts)'",
    "lint:fix": "eslint --fix './src/**/*.@(js|ts)'",
    "format": "prettier --write ./**/*.{js,ts,md,json}",
    "prisma:generate": "prisma generate",
    "prisma:migration:apply": "dotenv -e ../.env -- prisma migrate deploy",
    "prisma:migration:create": "dotenv -e ../.env -- prisma migrate dev",
    "prisma:seed": "dotenv -e ../.env -- prisma db seed",
    "tsoa": "npx tsoa spec-and-routes",
    "openapi": "npx @openapitools/openapi-generator-cli generate -i ./src/generated/swagger.json -g typescript-axios -o ../front/src/generated/api",
    "guard": "npx ts-auto-guard './src/**/*.ts' --debug --guard-file-name='type.guard' --import-guards='Guards' && npm run format && npm run lint:fix",
    "postinstall": "npm run prisma:generate && npm run tsoa && npm run openapi"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  },
  "dependencies": {
    "axios": "1.5.0",
    "cors": "2.8.5",
    "dayjs": "1.11.9",
    "dotenv": "16.3.1",
    "path": "0.12.7",
    "prisma": "5.3.1",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "5.0.0",
    "tsoa": "5.1.1",
    "typeorm": "0.3.17",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "2.7.0",
    "@prisma/client": "5.3.1",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/morgan": "1.9.4",
    "@types/node": "20.5.0",
    "@types/swagger-ui-express": "4.1.3",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "dotenv-cli": "7.3.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "37.0.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-n": "16.0.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "morgan": "1.10.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.1",
    "ts-auto-guard": "4.1.4",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
